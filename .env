# ===== Redis Configuration =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redispass
REDIS_DATABASE=0
REDIS_TIMEOUT=5000
REDIS_SSL=false

# Redis Cache TTL (in seconds)
REDIS_CACHE_TTL=3600
REDIS_RATE_LIMIT_TTL=60

# ===== Database & Cache =====
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password

# ===== Keycloak Configuration =====
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123
KEYCLOAK_FRONTEND_URL=http://localhost:8089
KEYCLOAK_BACKEND_URL=http://localhost:8089
KEYCLOAK_REALM=parcel-realm

# Keycloak Client Secrets
AUTH_SERVICE_CLIENT_SECRET=your-client-secret
API_GATEWAY_CLIENT_SECRET=your-api-gateway-client-secret
PARCEL_SERVICE_CLIENT_SECRET=your-parcel-service-client-secret
WAREHOUSE_SERVICE_CLIENT_SECRET=your-warehouse-service-client-secret
CONSOLIDATION_SERVICE_CLIENT_SECRET=your-consolidation-service-client-secret

# ===== Flask Applications =====
FLASK_SECRET_KEY=your-super-secret-flask-key-change-this-in-production
FLASK_DEBUG=False

# ===== Kafka Configuration =====
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# ===== Spring Profiles =====
SPRING_PROFILES_ACTIVE=docker

# ===== Service URLs =====
AUTH_SERVICE_URL=http://auth-service:8083
API_GATEWAY_URL=http://api-gateway:8080
WAREHOUSE_SERVICE_URL=http://warehouse-service:8082
CONSOLIDATION_SERVICE_URL=http://consolidation-service:8081
PARCEL_SERVICE_URL=http://parcel-service:8080

# ===== Java Options =====
JAVA_OPTS=-Xmx512m -Xms256m

# ===== Docker Compose Specific =====
COMPOSE_PROJECT_NAME=sparrow