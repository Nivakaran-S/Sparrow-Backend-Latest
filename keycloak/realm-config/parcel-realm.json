{
  "id": "parcel-realm",
  "realm": "parcel-realm",
  "displayName": "Parcel Delivery Realm",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": true,
  "registrationEmailAsUsername": false,
  "rememberMe": true,
  "verifyEmail": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": false,

  "clients": [
    {
      "clientId": "auth-service",
      "name": "Auth Service",
      "description": "Authentication service client",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "your-client-secret",
      "redirectUris": [
        "http://localhost:8083/*",
        "http://auth-service:8083/*"
      ],
      "webOrigins": ["*"],
      "publicClient": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "protocol": "openid-connect",
      "attributes": {
        "backchannel.logout.session.required": "true",
        "backchannel.logout.revoke.offline.tokens": "false"
      },
      "protocolMappers": [
        {
          "name": "realm roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "config": {
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "realm_access.roles",
            "jsonType.label": "String"
          }
        },
        {
          "name": "roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "config": {
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "roles",
            "jsonType.label": "String"
          }
        }
      ],
      "defaultClientScopes": ["profile", "email", "roles"],
      "optionalClientScopes": []
    },
    {
      "clientId": "parcel-service",
      "name": "Parcel Service",
      "enabled": true,
      "publicClient": false,
      "secret": "parcel-service-secret",
      "redirectUris": ["*"],
      "webOrigins": ["*"],
      "serviceAccountsEnabled": true,
      "directAccessGrantsEnabled": true
    },
    {
      "clientId": "warehouse-service",
      "name": "Warehouse Service",
      "enabled": true,
      "publicClient": false,
      "secret": "warehouse-service-secret",
      "redirectUris": ["*"],
      "webOrigins": ["*"],
      "serviceAccountsEnabled": true,
      "directAccessGrantsEnabled": true
    }
  ],

  "clientScopes": [
    {
      "name": "roles",
      "description": "OpenID Connect scope for add user roles to the access token",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true"
      },
      "protocolMappers": [
        {
          "name": "realm roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "config": {
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "realm_access.roles",
            "jsonType.label": "String"
          }
        }
      ]
    }
  ],

  "defaultDefaultClientScopes": ["profile", "email", "roles"],

  "roles": {
    "realm": [
      {
        "name": "ADMIN",
        "description": "Administrator role"
      },
      {
        "name": "CUSTOMER",
        "description": "Customer role"
      },
      {
        "name": "STAFF",
        "description": "Staff role"
      },
      {
        "name": "DRIVER",
        "description": "Driver role"
      }
    ]
  },

  "users": [
    {
      "username": "admin",
      "email": "admin@parcel.com",
      "firstName": "System",
      "lastName": "Administrator",
      "enabled": true,
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": ["ADMIN", "USER"],
      "emailVerified": true
    },
    {
      "username": "customer1",
      "email": "customer1@example.com",
      "firstName": "John",
      "lastName": "Doe",
      "enabled": true,
      "credentials": [
        {
          "type": "password",
          "value": "customer123",
          "temporary": false
        }
      ],
      "realmRoles": ["CUSTOMER", "USER"],
      "emailVerified": true
    }
  ],

  "groups": [
    {
      "name": "Administrators",
      "realmRoles": ["ADMIN", "USER"]
    },
    {
      "name": "Customers",
      "realmRoles": ["CUSTOMER", "USER"]
    },
    {
      "name": "Staff",
      "realmRoles": ["STAFF", "USER"]
    },
    {
      "name": "Drivers",
      "realmRoles": ["DRIVER", "USER"]
    }
  ],

  "defaultRoles": ["USER"]
}