{
  "id": "parcel-realm",
  "realm": "parcel-realm",
  "displayName": "Parcel Delivery Realm",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": true,
  "registrationEmailAsUsername": false,
  "rememberMe": true,
  "verifyEmail": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": false,

  "clients": [
    {
      "clientId": "auth-service",
      "name": "Auth Service",
      "description": "Authentication service client",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "auth-service-secret",
      "redirectUris": [
        "http://localhost:8083/*",
        "http://auth-service:8083/*"
      ],
      "webOrigins": ["*"],
      "publicClient": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "protocol": "openid-connect",
      "attributes": {
        "backchannel.logout.session.required": "true",
        "backchannel.logout.revoke.offline.tokens": "false"
      },
      "protocolMappers": [
        {
          "name": "realm roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "config": {
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "realm_access.roles",
            "jsonType.label": "String"
          }
        }
      ],
      "defaultClientScopes": ["web-origins", "acr", "profile", "roles", "email"],
      "optionalClientScopes": ["address", "phone", "offline_access", "microprofile-jwt"]
    },
    {
      "clientId": "parcel-service",
      "name": "Parcel Service",
      "enabled": true,
      "publicClient": false,
      "secret": "parcel-service-secret",
      "redirectUris": ["http://localhost:8084/*", "http://parcel-service:8080/*"],
      "webOrigins": ["*"],
      "serviceAccountsEnabled": true,
      "directAccessGrantsEnabled": true,
      "protocolMappers": [
        {
          "name": "roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "config": {
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "roles",
            "jsonType.label": "String"
          }
        }
      ]
    },
    {
      "clientId": "warehouse-service",
      "name": "Warehouse Service",
      "enabled": true,
      "publicClient": false,
      "secret": "warehouse-service-secret",
      "redirectUris": ["http://localhost:8082/*", "http://warehouse-service:8082/*"],
      "webOrigins": ["*"],
      "serviceAccountsEnabled": true,
      "directAccessGrantsEnabled": true,
      "protocolMappers": [
        {
          "name": "roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "config": {
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "claim.name": "roles",
            "jsonType.label": "String"
          }
        }
      ]
    }
  ],

